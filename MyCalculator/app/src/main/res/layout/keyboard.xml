<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TableLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="0,1,2,3">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/button_clear"
                android:layout_width="@dimen/button_size"
                android:layout_height="@dimen/button_size"
                android:text="@string/button_clear"
                android:textSize="@dimen/button_text_size"
                style="?android:attr/buttonBarButtonStyle" />

            <Button
                android:id="@+id/button_root"
                android:layout_width="@dimen/button_size"
                android:layout_height="@dimen/button_size"
                android:background="@color/button_operation_color"
                android:text="@string/button_root"
                android:textSize="@dimen/button_text_size" />

            <Button
                android:id="@+id/button_pow"
                android:layout_width="@dimen/button_size"
                android:layout_height="@dimen/button_size"
                android:background="@color/button_operation_color"
                android:text="@string/button_pow"
                android:textSize="@dimen/button_text_size" />

            <Button
                android:id="@+id/button_plus"
                android:layout_width="@dimen/button_size"
                android:layout_height="@dimen/button_size"
                android:background="@color/button_operation_color"
                android:text="@string/button_plus"
                android:textSize="@dimen/button_text_size" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/button_seven"
                android:layout_width="@dimen/button_size"
                android:layout_height="@dimen/button_size"
                android:background="@color/button_number_color"
                android:text="@string/button_7"
                android:textSize="@dimen/button_text_size" />

            <Button
                android:id="@+id/button_eight"
                android:layout_width="@dimen/button_size"
                android:layout_height="@dimen/button_size"
                android:background="@color/button_number_color"
                android:text="@string/button_8"
                android:textSize="@dimen/button_text_size" />

            <Button
                android:id="@+id/button_nine"
                android:layout_width="@dimen/button_size"
                android:layout_height="@dimen/button_size"
                android:background="@color/button_number_color"
                android:text="@string/button_9"
                android:textSize="@dimen/button_text_size" />

            <Button
                android:id="@+id/button_minus"
                android:layout_width="@dimen/button_size"
                android:layout_height="@dimen/button_size"
                android:background="@color/button_operation_color"
                android:text="@string/button_minus"
                android:textSize="@dimen/button_text_size" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/button_four"
                android:layout_width="@dimen/button_size"
                android:layout_height="@dimen/button_size"
                android:background="@color/button_number_color"
                android:text="@string/button_4"
                android:textSize="@dimen/button_text_size" />

            <Button
                android:id="@+id/button_five"
                android:layout_width="@dimen/button_size"
                android:layout_height="@dimen/button_size"
                android:background="@color/button_number_color"
                android:text="@string/button_5"
                android:textSize="@dimen/button_text_size" />

            <Button
                android:id="@+id/button_six"
                android:layout_width="@dimen/button_size"
                android:layout_height="@dimen/button_size"
                android:background="@color/button_number_color"
                android:text="@string/button_6"
                android:textSize="@dimen/button_text_size" />

            <Button
                android:id="@+id/button_multiply"
                android:layout_width="@dimen/button_size"
                android:layout_height="@dimen/button_size"
                android:background="@color/button_operation_color"
                android:text="@string/button_mul"
                android:textSize="@dimen/button_text_size" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/button_one"
                android:layout_width="@dimen/button_size"
                android:layout_height="@dimen/button_size"
                android:background="@color/button_number_color"
                android:text="@string/button_1"
                android:textSize="@dimen/button_text_size" />

            <Button
                android:id="@+id/button_two"
                android:layout_width="@dimen/button_size"
                android:layout_height="@dimen/button_size"
                android:background="@color/button_number_color"
                android:text="@string/button_2"
                android:textSize="@dimen/button_text_size" />

            <Button
                android:id="@+id/button_three"
                android:layout_width="@dimen/button_size"
                android:layout_height="@dimen/button_size"
                android:background="@color/button_number_color"
                android:text="@string/button_3"
                android:textSize="@dimen/button_text_size" />

            <Button
                android:id="@+id/button_divide"
                android:layout_width="@dimen/button_size"
                android:layout_height="@dimen/button_size"
                android:background="@color/button_operation_color"
                android:text="@string/button_div"
                android:textSize="@dimen/button_text_size" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/button_dot"
                android:layout_width="@dimen/button_size"
                android:layout_height="@dimen/button_size"
                android:background="@color/button_number_color"
                android:text="@string/button_dot"
                android:textSize="@dimen/button_text_size" />

            <Button
                android:id="@+id/button_zero"
                android:layout_width="@dimen/button_size"
                android:layout_height="@dimen/button_size"
                android:background="@color/button_number_color"
                android:text="@string/button_0"
                android:textSize="@dimen/button_text_size" />

            <Button
                android:id="@+id/button_equals"
                android:layout_width="@dimen/button_size"
                android:layout_height="@dimen/button_size"
                android:background="@color/button_number_color"
                android:text="@string/button_equals"
                android:textSize="@dimen/button_text_size"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/button_mod"
                android:layout_width="@dimen/button_size"
                android:layout_height="@dimen/button_size"
                android:background="@color/button_operation_color"
                android:text="@string/button_mod"
                android:textSize="@dimen/button_text_size" />
        </TableRow>
    </TableLayout>

</FrameLayout>
